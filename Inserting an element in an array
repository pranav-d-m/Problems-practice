#include <stdio.h>
int main() 
{
    int n,pos,num,i;

    printf("Enter the number of elements: ");
    scanf("%d",&n);

    printf("Enter the number to be inserted: ");
    scanf("%d",&num);

    printf("Enter the position where the number has to be inserted: ");
    scanf("%d",&pos);

    int arr[n];
    printf("Enter the elements: ");
    for(i = 0; i < n; i++)
    {
        scanf("%d",&arr[i]);
    }

    for(i = n; i >= pos; i--)
    {
        arr[i] = arr[i-1];
    }

    arr[pos-1] = num;

    printf("Array after insertion: ");
    for(i = 0; i <= n; i++)
    {
        printf("%d, ",arr[i]);
    }
    return 0;
}
