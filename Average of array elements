#include<iostream>
using namespace std;
int main()
{
    int arr[] = {87,45,75,12,78};
    int sz = sizeof(arr)/sizeof(arr[0]), sum = 0;

    for(int i = 0; i < sz; i++)
    {
        sum += arr[i];
    }

    int avg = sum/sizeof(arr);
    cout<<"Sum of array elements = "<< sum<<endl;
    cout<<"Average of array elements = "<<avg;
    return 0;
}
