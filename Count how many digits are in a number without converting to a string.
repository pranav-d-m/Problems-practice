#include <stdio.h>
int main() 
{ 
    int n,count = 0;

    printf("Enter a number: ");
    scanf("%d", &n);

    if(n == 0)
        count++;
    else
        if(n < 0)
            n = -n;
        while(n>0)
        {
            n/= 10;
            count++;
        }
    printf("The number of digits are: %d",count);
    return 0;
}
