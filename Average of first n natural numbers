/*Average of first n natural numbers*/
#include <stdio.h>
int main()
{
    int i,n,sum = 0;

    printf("Enter the number till you want to find to find the average: ");
    scanf("%d",&n);

    for(i = 0; i <= n; i++)
    {
        sum += i;
    }
    int avg = sum/n;

    printf("The sum of first %d natural numbers is %d.\n",n,sum);
    printf("The average of first %d natural numbers is %d\n",n,avg);
}
