#include <stdio.h>
int main()
{
    int n, pos, num, i;

    printf("Enter the number of elements: ");
    scanf("%d", &n);

    int arr[100]; // keep some extra space

    printf("Enter %d elements: ", n);
    for(i = 0; i < n; i++)
    {
        scanf("%d", &arr[i]);
    }

    printf("Enter the number to be inserted: ");
    scanf("%d", &num);

    printf("Enter the position (1 to %d): ", n+1);
    scanf("%d", &pos);

    // shift elements to the right
    for(i = n; i >= pos; i--)
    {
        arr[i] = arr[i-1];
    }

    arr[pos-1] = num; // insert at given position
    n++;

    printf("Array after insertion: ");
    for(i = 0; i < n; i++)
    {
        printf("%d ", arr[i]);
    }

    return 0;
}
