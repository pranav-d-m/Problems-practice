#include <stdio.h>
int main() 
{
    int n;

    printf("Enter the number of elements: ");
    scanf("%d",&n);

    int arr[n];
    printf("Enter the elements: ");
    for(int i = 0; i < n; i++)  // fixed <= to <
    {
        scanf("%d",&arr[i]);
    }

    printf("The original array:\n");
    for(int i = 0; i < n; i++ )  // fixed <= to <
    {
        printf("%d ",arr[i]);
    }

    printf("\nThe reversed array is:\n");
    for(int j = 0; j < n/2; j++)  // swap first half with last half
    {
        int temp = arr[j];
        arr[j] = arr[n-j-1];
        arr[n-j-1] = temp;
    }

    for(int i = 0; i < n; i++)
    {
        printf("%d ",arr[i]);
    }

    return 0;
}
